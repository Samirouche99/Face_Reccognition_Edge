<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
// Sorting functionality
document.getElementById('sortDropdown').addEventListener('change', function() {
    const sortBy = this.value;
    const tbody = document.getElementById('logsBody');
    const rows = Array.from(tbody.querySelectorAll('tr'));

    rows.sort((a, b) => {
        if (sortBy === 'name') {
            const nameA = a.children[1].textContent.toLowerCase();
            const nameB = b.children[1].textContent.toLowerCase();
            return nameA.localeCompare(nameB);
        } else if (sortBy === 'timestamp') {
            const timeA = parseInt(a.children[3].getAttribute('data-timestamp'));
            const timeB = parseInt(b.children[3].getAttribute('data-timestamp'));
            return timeB - timeA;  // Newest first
        }
    });

    rows.forEach(row => tbody.appendChild(row));
});
</script>

</body>
